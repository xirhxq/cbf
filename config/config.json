{
  "world": {
    "boundary": [
      [-1500, 0],
      [1500, 0],
      [1500, 3000],
      [-1500, 3000]
    ],
    "charge":[
      {
        "position": [-300, 100],
        "radius": 10.0,
        "charge-rate": 5.0
      },
      {
        "position": [0, 100],
        "radius": 10.0,
        "charge-rate": 5.0
      },
      {
        "position": [300, 100],
        "radius": 10.0,
        "charge-rate": 5.0
      }
    ],
    "spacing": 10.0
  },
  "num": 3,
  "dim": 4,
  "initial": {
    "position": {
      "//method": ["specified", "random-in-polygon", "random-in-world"],
      "method": "specified",
      "polygon": [
        [-100, 0],
        [-100, 100],
        [100, 100],
        [100, 0]
      ],
      "positions": [
        [-20, 10],
        [20, 10],
        [-20, 20],
        [20, 20],
        [-20, 30],
        [20, 30],
        [-20, 40],
        [20, 40],
        [-20, 50],
        [20, 50],
        [-20, 60],
        [20, 60],
        [-20, 70],
        [20, 70]
      ]
    },
    "battery": {
      "min": 4100,
      "max": 4200
    },
    "yawDeg": 0
  },
  "model": "SingleIntegrate2D",
  "model-params": {
    "discharge-rate": 0.5
  },
  "uncertainty": {
    "//method": ["dist", "const"],
    "method": "dist",
    "const": {
      "epsilon": 100
    },
    "dist": {
      "k": 0.05,
      "b": 1.0
    }
  },
  "searching": {
    "//method": ["downward", "front-sector", "front-cone"],
    "method": "front-sector",
    "downward": {
      "radius": 200.0
    },
    "front-sector": {
      "inner-radius": 50.0,
      "outer-radius": 200.0,
      "half-angle-deg": 30.0
    },
    "front-cone": {
      "height": 50.0,
      "downward-radius": 20.0,
      "camera-pitch-deg": 30.0
    }
  },
  "optimiser": "Gurobi",
  "cbfs": {
    "objective-function": {
      "k_delta": 10.0
    },
    "with-slack": {
      "cvt": {
        "name": "cvtCBF",
        "on": true,
        "kp": 1.0,
        "alpha": {
          "coe": 1.0,
          "pow": 1
        }
      },
      "cvt-yaw": {
        "name": "cvtYawCBF",
        "on": true,
        "k_yaw": 1.0,
        "alpha": {
          "coe": 1.0,
          "pow": 1
        }
      },
      "target-yaw": {
        "name": "yawCBF",
        "on": false,
        "kp": 1.0,
        "alpha": {
          "coe": 1.0,
          "pow": 1
        }
      }
    },
    "without-slack": {
      "//method": ["all", "min"],
      "method": "all",
      "energy": {
        "name": "energyCBF",
        "on": true,
        "//energy-value": ["self", "neighbour-min"],
        "energy-value": "neighbour-min",
        "normalize": {
          "on": false,
          "max": 100.0
        },
        "k": 12.0,
        "alpha": {
          "coe": 0.1,
          "pow": 1
        }
      },
      "safety": {
        "name": "safetyCBF",
        "on": false,
        "safe-distance": 300.0,
        "alpha": {
          "coe": 0.1,
          "pow": 3
        }
      },
      "comm-fixed": {
        "name": "commFixedCBF",
        "on": true,
        "mode": "chain",
        "max-range": 850.0,
        "k": 1.0,
        "min-neighbour-id-offset": -1,
        "max-neighbour-id-offset": 1,
        "compensate-velocity": true,
        "bases": [
          [0, 0],
          [-300, 0],
          [300, 0]
        ],
        "alpha": {
          "coe": 0.1,
          "pow": 3
        }
      },
      "comm-auto": {
        "name": "commAutoCBF",
        "on": false,
        "max-range": 800,
        "max-consider-range": 1200,
        "k": 1.0,
        "alpha": {
          "coe": 0.1,
          "pow": 1
        }
      }
    }
  },
  "execute": {
    "//execution-mode": ["distributed", "centralized"],
    "execution-mode": "centralized",
    "time-total": 1000,
    "time-step": 0.5
  },
  "debug": {
    "opt-cbc": false
  }
}